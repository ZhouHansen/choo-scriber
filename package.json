{
  "name": "choo-scriber",
  "version": "1.0.0",
  "description": "scriber powered by choo",
  "main": "index.js",
  "scripts": {
    "start": "budo index.js --live",
    "build-folder": "mkdir -p build",
    "build-bundle.js": "browserify index.js > ./build/bundle.js",
    "build-index.html": "create-html -t 'choo-scriber' -b '<div></div>' -s bundle.js -o ./build/index.html",
    "build": "npm run -s build-folder & npm run -s build-bundle.js & npm run -s build-index.html"
  },
  "author": "zhouhansen <z308114274@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "4.0.0",
    "choo": "^6.0.1",
    "jquery": "^3.2.1",
    "sheetify": "^6.2.0",
    "sheetify-cssnext": "^1.0.7",
    "spinkit": "^1.2.5",
    "yuki-createjs": "0.0.3"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "budo": "^10.0.4",
    "uglifyify": "^4.0.4"
  },
  "browserify": {
    "transform": [
      [
        "sheetify",
        {
          "u": "sheetify-cssnext"
        }
      ],
      [
        "uglifyify"
      ],
      [
        "brfs"
      ]
    ]
  }
}
